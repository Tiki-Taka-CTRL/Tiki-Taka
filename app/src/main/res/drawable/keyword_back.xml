<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0000FF" /> <!-- 눌렸을 때의 배경색 -->
            <corners android:radius="10dp" /> <!-- 둥근 모서리 반지름 -->
            <stroke android:color="#0000FF" android:width="2dp" /> <!-- 테두리 색과 두께 -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 기본 배경색 -->
            <corners android:radius="10dp" /> <!-- 둥근 모서리 반지름 -->
            <stroke android:color="#0000FF" android:width="2dp" /> <!-- 테두리 색과 두께 -->
        </shape>
    </item>
</selector>