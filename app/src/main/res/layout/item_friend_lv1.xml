<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_friendLv1_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:src="@drawable/img_profile_leo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_friendLv1_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_friendLv1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/friend_name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_friendLv1_content1"
        app:layout_constraintStart_toEndOf="@id/img_friendLv1_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_friendLv1_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#swimðŸŠ #American"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/tv_friendLv1_content2"
        app:layout_constraintStart_toStartOf="@id/tv_friendLv1_name"
        app:layout_constraintTop_toBottomOf="@id/tv_friendLv1_name" />

    <TextView
        android:id="@+id/tv_friendLv1_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="#active #Violin #Cooking"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_friendLv1_name"
        app:layout_constraintTop_toBottomOf="@id/tv_friendLv1_content1" />

    <Button
        android:id="@+id/btn_friendLv1_profile"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle_round_blue_15dp"
        android:text="View Profile"
        android:textAllCaps="false"
        android:textColor="@color/dark_gray"
        android:textSize="11dp"
        app:layout_constraintBottom_toTopOf="@id/btn_friendLv1_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_friendLv1_profile" />

    <Button
        android:id="@+id/btn_friendLv1_delete"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle_round_pink_15dp"
        android:text="Delete Friend"
        android:textAllCaps="false"
        android:textColor="@color/dark_gray"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@id/img_friendLv1_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_friendLv1_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>