<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_friend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Friend"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tab_friend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_friend"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_title">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem1_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1"
            app:textAppearance="@style/Widget.MaterialComponents.TabLayout.Tab" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem2_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 2"
            app:textAppearance="@style/Widget.MaterialComponents.TabLayout.Tab" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem3_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 3"
            app:textAppearance="@style/Widget.MaterialComponents.TabLayout.Tab" />
    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>